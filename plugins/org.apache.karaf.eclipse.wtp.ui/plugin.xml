            class="org.apache.karaf.eclipse.wtp.ui.launcher.KarafLauncherTabGroup"
            id="org.apache.karaf.eclipse.wtp.ui.KarafLauncherTabGroup"
            type="org.apache.karaf.eclipse.wtp.core.KarafServerLauncher">
